{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h3><i class="fas fa-key"></i> Modifier mon mot de passe</h3>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        <div class="form-group mb-4">
                            {{ form_label(form.newPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
                            {% if form.newPassword.first.vars.errors|length > 0 %}
                                <div class="text-danger mt-1">
                                    {{ form_errors(form.newPassword.first) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.newPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'font-weight-bold'}}) }}
                            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre nouveau mot de passe'}}) }}
                            {% if form.newPassword.second.vars.errors|length > 0 %}
                                <div class="text-danger mt-1">
                                    {{ form_errors(form.newPassword.second) }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Enregistrer les modifications</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
