{% extends 'base.html.twig' %}

{% block title %}Edit Quack{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg mb-4">
            <div class="card-body">
                <h1 class="text-center mb-4">Modifier votre Quack</h1>

                <!-- Formulaire de modification -->
                {{ form_start(form, {'attr': {'class': 'mb-3'}}) }}

                <div class="form-group">
                    <!-- Ici nous incluons le formulaire de manière partagée (comme tu l'as fait) -->
                    {{ form_row(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Modifiez votre message'}}) }}
                </div>

                <div class="form-group">
                    <!-- Si le formulaire contient une image -->
                    {{ form_row(form.picture, {'attr': {'class': 'form-control-file'}}) }}
                </div>

                <!-- Bouton de soumission -->
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Mettre à jour</button>
                </div>



                <!-- Lien de retour vers la liste des posts -->
                <div class="mt-3">
                    <a href="{{ path('app_quack-all') }}" class="btn btn-secondary">Retour à la liste</a>
                </div>

                <!-- Formulaire de suppression du post -->

                    {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
