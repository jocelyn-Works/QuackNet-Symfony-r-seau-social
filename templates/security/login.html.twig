{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" >
        <div class="card shadow-lg" style="width: 400px;">
            <div class="card-body">
                <h2 class="text-center mb-4">Connexion</h2>
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" value="{{ username }}" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" required>
                    </div>
                    <div class="form-group mb-3">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="remember-me form-check mb-3">
                        <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                        <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                </form>

                {% if error %}
                    <div class="alert alert-danger mt-3">
                        {{ error.messageKey }}
                    </div>
                {% endif %}

                <div class="text-center mt-3">
                    <a href="{{ path('signup') }}">Cr√©er un compte</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
